{
  "private": true,
  "packageManager": "yarn@3.3.1",
  "name": "@adaliszk/infrastructure",
  "description": "Infrastructure configuration and setup via GitLab, Ansible, Flux, and Pulumi",
  "repository": "gitlab:adaliszk/infrastructure.git",
  "author": "Ádám Liszkai <adam@liszkai.dev>",
  "license": "BSD-3-Clause",
  "scripts": {
    "ansible": "yarn workspace @cwd/ansible",
    "k8s": "yarn workspace @cwd/clusters",
    "changeset": "changeset",
    "build": "turbo build",
    "push": "turbo push"
  },
  "devDependencies": {
    "@adaliszk/typescript": "latest",
    "@changesets/cli": "latest",
    "eslint": "latest",
    "turbo": "latest",
    "typescript": "latest"
  },
  "workspaces": [
    "ansible",
    "clusters/*",
    "clusters",
    "images/*",
    "images",
    "packages/*",
    "packages"
